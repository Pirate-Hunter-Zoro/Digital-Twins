#!/bin/bash
#SBATCH --job-name=generate_all_term_pairs_ABSOLUTE
#SBATCH --partition=c3_accel
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --gpus-per-node=1
#SBATCH --cpus-per-task=8
#SBATCH --mem=64G
#SBATCH --time=7-00:00:00
#SBATCH --output=slurm_jobs/world_4_embedder_gauntlet/logs/gen_pairs_out.txt
#SBATCH --error=slurm_jobs/world_4_embedder_gauntlet/logs/gen_pairs_err.txt

echo "üöÄ Engaging ABSOLUTE COORDINATES Protocol! No more guessing! üöÄ"

# --- Step 1: Define the EXACT location of our tools ---
CONDA_ENV_PATH="/home/librad.laureateinstitute.org/mferguson/.conda/envs/dt_env"
PYTHON_EXEC="$CONDA_ENV_PATH/bin/python"
VLLM_EXEC="$CONDA_ENV_PATH/bin/vllm"

echo "üêç Using Python at: $PYTHON_EXEC"
echo "üß† Using vLLM at: $VLLM_EXEC"

# --- Step 2: Load the CORRECT CUDA module! ---
echo "Loading the correct CUDA module..."
module load CUDA/12.5.0

# --- Step 3: Launch the vLLM Brain with its absolute path! ---
echo "Firing up the vLLM server with MedGemma..."
$VLLM_EXEC serve /media/scratch/mferguson/models/unsloth-medgemma-27b-text-it-bnb-4bit \
  --model-name medgemma \
  --dtype float16 \
  --gpu-memory-utilization 0.9 \
  --max-model-len 4096 &

VLLM_PID=$!
echo "‚úÖ vLLM server started with PID: $VLLM_PID"
sleep 60 # Give it a moment to warm up

# --- Step 4: Run Our Script with its absolute Python path! ---
echo "ü§ñ Unleashing the Synonym Invention Machine!"
$PYTHON_EXEC scripts/world_4_embedder_gauntlet/generate_term_pairs.py
echo "‚úÖ Synonym Invention Machine has finished its work!"

# --- Step 5: Clean Up ---
echo "üßπ Shutting down the vLLM server (PID: $VLLM_PID)."
kill $VLLM_PID
wait $VLLM_PID

echo "üéâ VICTORY IS INEVITABLE! EVERY PATH IS NOW ABSOLUTE!"