if [ $? -ne 0 ]; then
    echo "âŒ ERROR: compute_nearest_neighbors.py failed. Halting."
    exit 1
fi
echo "âœ… Neighbor computation complete."


# --- STEP 2: Analyze Neighbors and Generate Graph ---
echo "\n--- ğŸ”¬ Running examine_and_correlate_neighbors.py ---"
python scripts/world_2_neighbor_analysis/examine_and_correlate_neighbors.py \
    --representation_method "$REP_METHOD_ENV" \
    --vectorizer_method "$VEC_METHOD_ENV" \
    --distance_metric "$DIST_METRIC_ENV" \
    --num_visits "$NUM_VISITS_ENV" \
    --num_patients "$NUM_PATIENTS_ENV" \
    --num_neighbors "$NUM_NEIGHBORS_ENV" \
    --model_name "medgemma"

if [ $? -ne 0 ]; then
    echo "âŒ ERROR: examine_and_correlate_neighbors.py failed."
    exit 1
fi
echo "âœ… Analysis and graph generation complete."

